@page "/Details/{id:int}"
@model project.Pages.DetailsModel

<style>

.details-page .container {
  width: 90%;
  max-width: 1000px;
  margin: 2rem auto;
  background: #fff;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

h1 {
  text-align: center;
  margin-bottom: 1.5rem;
}

.detail-group {
  margin-bottom: 1rem;
}

.detail-group label {
  font-weight: bold;
  display: block;
  margin-bottom: 0.3rem;
  color: #444;
}

.detail-group span {
  display: block;
  padding: 0.6rem;
  background: #f9f9f9;
  border-radius: 4px;
}

.actions {
  margin-top: 2rem;
  display: flex;
  justify-content: center;
  gap: 1rem;
}

.btn {
  display: inline-block;
  padding: 0.7rem 1.2rem;
  background: #007bff;
  color: #fff;
  border-radius: 4px;
  text-decoration: none;
  transition: background 0.3s;
}

.btn:hover {
  background: #0056b3;
}

.btn-secondary {
  background: #6c757d;
}

.btn-secondary:hover {
  background: #5a6268;
}

span {
	color: unset;
}

</style>

<div class="details-page">
  <div class="container">
      <h1>Book Details</h1>

      <div class="detail-group">
          <label>Title:</label>
          <span>@Model.Book.Title</span>
      </div>

      <div class="detail-group">
          <label>Author:</label>
          <span>@Model.Book.AuthorName</span>
      </div>

      <div class="detail-group">
          <label>Language:</label>
          <span>@Model.Book.Language</span>
      </div>

      <div class="detail-group">
          <label>Price:</label>
          <span>@Model.Book.Price.ToString("C")</span>
      </div>

      <div class="detail-group">
          <label>Discount Percent:</label>
          <span>@Model.Book.DiscountPercent %</span>
      </div>

      <div class="detail-group">
          <label>Selling Price:</label>
          <span>@Model.Book.SellPrice.ToString("C")</span>
      </div>

      <div class="actions">
          <a asp-page="Index" class="btn btn-secondary">Back to List</a>
      </div>
    </div>
</div>