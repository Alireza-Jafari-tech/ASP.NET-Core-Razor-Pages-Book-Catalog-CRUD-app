@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
	/* Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: Arial, sans-serif;
  line-height: 1.6;
  background: #f9f9f9;
  color: #333;
}

/* Navbar */
.navbar {
  background: #222;
  color: #fff;
  padding: 0.8rem 0;
}

.navbar .container {
  width: 90%;
  margin: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.navbar .logo {
  font-size: 1.4rem;
  font-weight: bold;
  color: #fff;
  text-decoration: none;
}

.nav-links {
  list-style: none;
  display: flex;
  gap: 1.2rem;
}

.nav-links a {
  color: #ddd;
  text-decoration: none;
  transition: 0.3s;
}

.nav-links a:hover {
  color: #fff;
}

/* Main */
.container {
  width: 90%;
  margin: 2rem auto;
}

h1 {
  margin-bottom: 1rem;
  color: #222;
}

/* Buttons */
.btn {
  background: #007bff;
  color: #fff;
  border: none;
  padding: 0.6rem 1rem;
  border-radius: 4px;
  cursor: pointer;
  margin-bottom: 1rem;
  transition: 0.3s;
}

.btn:hover {
  background: #0056b3;
  color: #fff;
}

.btn:focus {
  outline: none;
}

.btn.small {
  padding: 0.3rem 0.7rem;
  font-size: 0.9rem;
}

.btn.danger {
  background: #dc3545;
}

.btn.danger:hover {
  background: #a71d2a;
  color: #fff;
}

/* Table */
.book-table {
  width: 100%;
  border-collapse: collapse;
  background: #fff;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.book-table th, 
.book-table td {
  padding: 0.8rem;
  border: 1px solid #ddd;
  text-align: center;
}

.action-cell {
  display: flex;
  justify-content: center;
  gap: 15px;
  align-content: center;
}

.book-table th {
  background: #f4f4f4;
}

/* Footer */
/* footer {
  text-align: center;
  padding: 1rem;
  margin-top: 2rem;
  background: #222;
  color: #ddd;
} */

  </style>
  
<a asp-page="/Create" class="btn">Add New Book</a>
    <table class="book-table">
      <thead>
        <tr>
		<th>No.</th>
          <th>Title</th>
          <th>Author</th>
          <th>Language</th>
          <th>Price</th>
          <th>Sell Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
		@{
			int i = 1;
		}
        @foreach(var book in @Model.Books)
		{
			<tr>
			<td>@i</td>
          <td>@book.Title</td>
          <td>@book.AuthorName</td>
          <td>@book.Language</td>
          <td>@book.Price $</td>
          <td>$@book.SellPrice</td>
          <td class="action-cell">
            <a asp-page="/Edit" asp-route-id="@book.Id" class="btn small btn-primary">Edit</a>
            <a asp-page="/Delete" asp-route-id="@book.Id" class="btn small danger">Delete</a>
            <a asp-page="/Details" asp-route-id="@book.Id" class="btn small bg-success">Details</a>
          </td>
        </tr>
			{
				i++;
			}
		}
        </tbody>
